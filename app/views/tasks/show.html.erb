<% provide(:title, t(".title")) %>
<h1><%= t ".title" %></h1>
<table class="task-show-container">
  <tr class="task-item">
    <th class="scope"><%= t "tasks.name" %></th>
    <td><%= @task.name %></td>
  </tr>
  <tr class="task-item">
    <th class="scope"><%= t "tasks.description" %></th>
    <td><%= simple_format h(@task.description) %></td>
  </tr>
  <tr class="task-item">
    <th class="scope"><%= t "tasks.expired_at" %></th>
    <td><%= l @task.expired_at %></td>
  </tr>
  <tr class="task-item">
    <th class="scope"><%= t "tasks.status.title" %></th>
    <td><%= t "tasks.status.#{@task.status}" %></td>
  </tr>
  <tr class="task-item">
    <th class="scope"><%= t "tasks.priority.title" %></th>
    <td><%= t "tasks.priority.#{@task.priority}" %></td>
  </tr>
  <tr class="task-item">
    <th class="scope"><%= t "tasks.created_at" %></th>
    <td><%= l @task.created_at %></td>
  </tr>
  <tr class= "task-item">
    <th class="scope"><%= t "tasks.updated_at" %></th>
    <td><%= l @task.updated_at %></td>
  </tr>
</table>
<%= link_to t("tasks.index.title"), tasks_path, class: "btn btn-outline-info" %>
<%= link_to t("tasks.edit.title"), edit_task_path(@task), class: "btn btn-outline-success" %>
<%= link_to t("tasks.delete.title"), task_path(@task), class: "btn btn-outline-danger", method: :delete, data: {confirm: t("tasks.delete.confirmation")} %>
