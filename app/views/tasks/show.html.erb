<% provide(:title, "タスク詳細") %>
<h1>タスク詳細</h1>
<div class="task-show-container">
  <div class="task-item">
    <h4>タイトル</h4>
    <p><%= @task.name %></p>
  </div>
  <div class="task-item">
    <h4>詳細</h4>
    <p><%= simple_format(@task.description) %></p>
  </div>
  <div class="task-item">
    <p>登録日時: <%= @task.created_at %></p>
    <p>更新日時: <%= @task.updated_at %></p>
  </div>
  <%= link_to "一覧", tasks_path, class: "btn btn-outline-info" %>
  <%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-success" %>
  <%= link_to "削除", task_path(@task), class: "btn btn-outline-danger", method: :delete, data: {confirm: "本当に削除しますか?"} %>
</div>