<div class="task-form-container">
  <%= form_with(model: task, local: true, class: "task-form") do |form| %>
    <% if task.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h3><%= pluralize(task.errors.count, t("tasks.errors.error")) + t("tasks.errors.message") %></h3>
        <ul>
          <% task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name, class: "sr-only" %>
      <%= form.text_field :name, class: "form-control", placeholder: t("tasks.name"), required: true %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "sr-only" %>
      <%= form.text_area :description, class: "form-control", placeholder: t("tasks.description"), required: true %>
    </div>
    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, Task.statuses.keys.map{ |status| [t("tasks.status.#{status}"), status]}, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :priority %>
      <%= form.select :priority, Task.priorities.keys.map{ |priority| [t("tasks.priority.#{priority}"), priority]}, class: "form-control", selected: Task.priorities.keys[-1], required: true %>
    </div>
    <div class="form-group">
      <%= form.label :expired_at %>
      <%= form.datetime_field :expired_at, class: "form-control", required: true %>
    </div>
    <%= form.submit nil, class: "btn btn-primary" %>
  <% end %>
</div>