<div class="task-form-container">
  <%= form_with(model: task, local: true, class: "task-form") do |form| %>
    <% if task.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h3><%= pluralize(task.errors.count, "error") %> prohibited this <%= task.name %> from being saved:</h3>
        <ul>
          <% task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name, class: "sr-only" %>
      <%= form.text_field :name, class: "form-control", placeholder: :name, required: true %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "sr-only" %>
      <%= form.text_area :description, class: "form-control", placeholder: :description, required: true %>
    </div>
    <%= form.submit yield(:btn), class: "btn btn-primary" %>
  <% end %>
</div>