<% provide(:title, "タスク一覧") %>
<h1>タスク一覧</h1>
<div class="table-container">
  <%= link_to "新規登録", new_task_path, class: "btn btn-primary" %>
  <table>
    <thead>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>登録日時</th>
      <th>リンク</th>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <td><%= task.name %></td>
        <td><%= simple_format(task.description) %></td>
        <td><%= task.created_at %></td>
        <td>
          <%= link_to "詳細", task_path(task), class: "btn btn-outline-primary" %>
          <%= link_to "編集", edit_task_path(task), class: "btn btn-outline-success" %>
          <%= link_to "削除", task_path(task), class: "btn btn-outline-danger", method: :delete, data: {confirm: "本当に削除しますか?"} %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>