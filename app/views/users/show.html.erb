<% provide(:title, t(".title")) %>
<h1><%= t ".title" %></h1>
<table class="user-show-container table">
  <tr class="task-item">
    <th class="scope" scope="row"><%= t "users.name" %></th>
    <td><%= @user.name %></td>
  </tr>
  <tr class="task-item">
    <th class="scope" scope="row"><%= t "users.email" %></th>
    <td><%= @user.email %></td>
  </tr>
</table>
<hr>


<%= render "tasks/table", tasks: @tasks, search_params: @search_params %>