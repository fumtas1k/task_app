<% provide(:title, t(".title")) %>

<div class="users-container">
  <h1><%= t(".title") %></h1>
  <% @users.each do |user| %>
    <div class="user-container">
      <%= link_to user_path(user) do %>
        <div class="user-item">
          <span><%= user.name %></span>
          <span><%= user.email %></span>
          <span><%= l user.created_at, format: :medium %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>